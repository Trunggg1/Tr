        <!-- Primary Colors -->
        <item name="colorPrimary">@color/dark_red</item> <!-- Soft red background -->
        <item name="colorPrimaryVariant">@color/soft_red</item> <!-- Darker shade of red -->
        <item name="colorOnPrimary">@color/white</item> <!-- White text on primary color -->

        <!-- Accent and Button Colors -->
        <item name="colorAccent">@color/dark_red</item> <!-- Light red for accents -->
